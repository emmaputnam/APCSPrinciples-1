        if 8 not in place:
            t.goto(-50, -300)
            drawo()
            place.append (8)

        else:
            pass
    elif x > -300 and x < -100 and y > -250 and y < -100: #bot left
        t.pu()
        if 9 not in place:
            t.goto(-250, -300)
            drawo()
            place.append (9)

        else:
            pass

def playing (x,y) : #switches x and o for each turn
    global turns
    if turns == 1 :
        locationo(x,y)
        turns=0

    elif turns == 0:
        turns=1
        locationx(x,y)


window.onscreenclick(playing)

window.mainloop()
